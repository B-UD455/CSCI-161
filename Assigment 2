play_again = "yes"
choices = ["rock","paper","scissors"]

while play_again == "yes":
    
    player1_choice = input("Player #1 Choose...(rock,paper,scissors): ").lower()
    player2_choice = input("Player #2 Choose...(rock,paper,scissors): ").lower()
    
    if player1_choice not in choices or player2_choice not in choices:
        print("One of the entries is not valid")
    

    if player1_choice == "rock":
        if player2_choice == "paper":
            print("Player 2 Wins!")
        elif player2_choice == "scissors":
            print("Player 1 Wins!")
        elif player2_choice == "rock": 
            print("Its a Tie")
    
            
    elif player1_choice == "paper":
                if player2_choice == "paper":
                    print("Its a Tie")
                elif player2_choice == "scissors":
                    print("Player 2 Wins!")
                elif player2_choice == "rock":
                    print("Player 1 Wins!")
                    
    elif player1_choice == "scissors":
                if player2_choice == "rock":
                    print("Player 2 Wins!")
                elif player2_choice == "paper":
                    print("Player 1 Wins!")
                elif player2_choice == "sissors": 
                    print("Its a Tie")

        
    play_again= input("Would you like to play again? (yes or no):").lower()


        
    
    
    
